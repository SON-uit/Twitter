include ../mixins/mixins.pug
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport" ,content="width=device-width, initial-scale=1.0")
        title Home page
        link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css' integrity='sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T' crossorigin='anonymous')
        link(href='https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.5.9/cropper.min.css' rel="stylesheet")
        link(rel="stylesheet" href="/css/main.css")
        block css
    body
        script.
            const userLoggedIn = !{JSON.stringify(userLoggedIn)}
        .wrapper.container-fluid
            .row 
                nav.col-2
                    a.blue(href="/")
                        i.fas.fa-dove 
                    a(href="/")
                        i.fa.fa-home
                    a(href="/notification")
                        i.fas.fa-bell 
                        span#numberOfNotifications 
                    a(href="/messages")
                        i.fas.fa-envelope 
                        span#numberOfMessages 
                    a(href="/search")
                        i.fas.fa-search
                    a(href=`/profile/${userLoggedIn._id}`)
                        i.fas.fa-user
                    button#logout
                        i.fas.fa-sign-out-alt
                .mainSection.col-10.col-md-8.col-lg-6
                    .titleContainer
                        h1 #{pageTitle}
                        block headerButton
                    block content
                div.d-none.d-md-block.col-md-2.col-lg-4 hello
        #notificationList      
          
        script(src="https://kit.fontawesome.com/7fdcc5db0d.js" crossorigin="anonymous")
        
        script(src='https://cdnjs.cloudflare.com/ajax/libs/axios/0.27.2/axios.min.js' integrity='sha512-odNmoc1XJy5x1TMVMdC7EMs3IVdItLPlCeL5vSUPN2llYKMJ2eByTTAIiiuqLg+GdNr9hF6z81p27DArRFKT7A==' crossorigin='anonymous' referrerpolicy='no-referrer')
        script(src='https://code.jquery.com/jquery-3.6.0.min.js' integrity='sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=' crossorigin='anonymous')
        script(src="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.5.9/cropper.min.js")
        
        script(src='https://cdn.jsdelivr.net/npm/popper.js@1.14.7/dist/umd/popper.min.js' integrity='sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1' crossorigin='anonymous')
        script(src='https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/js/bootstrap.min.js' integrity='sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM' crossorigin='anonymous')

        script(src='https://cdn.socket.io/4.5.0/socket.io.min.js' integrity='sha384-7EyYLQZgWBi67fBtVxw60/OWl1kjsfrPFcaU0pp0nAh+i8FD068QogUvg85Ewy1k' crossorigin='anonymous')
        script(src="/js/common.js")
        script(src="/js/clientSocket.js")
        block scripts